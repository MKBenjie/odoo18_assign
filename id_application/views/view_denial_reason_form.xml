<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_denial_reason_form" model="ir.ui.view">
        <field name="name">national.applicant.denial.reason.form</field>
        <field name="model">national.applicant</field>
        <field name="arch" type="xml">
            <form string="Denial Reason">
                <group>
                    <field name="denial_reason" placeholder="Provide a reason for denial" />
                </group>
                <footer>
                    <button string="Confirm" type="object" name="confirm_denial"
                        class="oe_highlight" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>